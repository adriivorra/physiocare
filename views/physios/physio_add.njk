{% extends "base.njk" %}

{% block title %}Registrar Fisioterapeuta{% endblock %}

{% block content %}
<div class="container mt-4">
    <h1>Registrar Fisioterapeuta</h1>

    <form action="/physios" method="POST" enctype="multipart/form-data">
        <div class="form-group">
            <label for="name">Nombre</label>
            <input type="text" name="name" id="name" class="form-control" value="{{ old.name }}">
        </div>
        <div class="form-group">
            <label for="surname">Apellido</label>
            <input type="text" name="surname" id="surname" class="form-control" value="{{ old.surname }}">
        </div>
        <div class="form-group">
            <label for="specialty">Especialidad</label>
            <select name="specialty" id="specialty" class="form-control">
                <option value="Sports" {% if old.specialty == 'Sports' %}selected{% endif %}>Deportiva</option>
                <option value="Neurological" {% if old.specialty == 'Neurological' %}selected{% endif %}>Neurológica</option>
                <option value="Pediatric" {% if old.specialty == 'Pediatric' %}selected{% endif %}>Pediátrica</option>
                <option value="Geriatric" {% if old.specialty == 'Geriatric' %}selected{% endif %}>Geriátrica</option>
                <option value="Oncological" {% if old.specialty == 'Oncological' %}selected{% endif %}>Oncológica</option>
            </select>
        </div>
        <div class="form-group">
            <label for="licenseNumber">Número de Licencia</label>
            <input type="text" name="licenseNumber" id="licenseNumber" class="form-control" value="{{ old.licenseNumber }}">
        </div>

        <div class="form-group">
        <label for="image">Imagen</label>
        <input type="file" class="form-control" id="imagen" name="imagen" accept="image/*">
        </div>
        <h3>Datos de Usuario Asociado</h3>
        <div class="form-group">
            <label for="login">Usuario</label>
            <input type="text" name="login" id="login" class="form-control" value="{{ old.login }}">
        </div>
        <div class="form-group">
            <label for="password">Contraseña</label>
            <input type="password" name="password" id="password" class="form-control">
        </div>
        <button type="submit" class="btn btn-primary">Registrar</button>
    </form>

    {% if errors %}
        <div class="alert alert-danger mt-3">
            <ul>
                {% for error in errors %}
                    <li>{{ error }}</li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}
</div>
{% endblock %}
